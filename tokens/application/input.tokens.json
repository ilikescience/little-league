{
  "$type": "color",
  "input": {
    "background": { "$value": "{color.background.surface.10}" },
    "border": { "$value": "{color.border.primary.40}" },
    "foreground": { "$value": "{color.font.primary.50}" },
    "placeholderForeground": { "$value": "{color.font.primary.60}" }
  },
  "inputValidation": {
    "errorBackground": { "$value": "{color.background.danger}" },
    "errorForeground": { "$value": "{color.font.primary.50}" },
    "errorBorder": { "$value": "{color.border.danger}" },
    "infoBackground": { "$value": "{color.background.info}" },
    "infoForeground": { "$value": "{color.font.primary.50}" },
    "infoBorder": { "$value": "{color.border.info}" },
    "warningBackground": { "$value": "{color.background.warning}" },
    "warningForeground": { "$value": "{color.font.inverse}" },
    "warningBorder": { "$value": "{color.border.warning}" }
  },
  "inputOption": {
    "activeBorder": { "$value": "{color.border.focus}" },
    "activeBackground": { "$value": "{color.background.interactive.base}" }
  }
}
