  "syntax": {
    "keyword": {
      // Using '*' here will apply this to the `keyword` scope
      "*": { "value": "{color.font.code.primary.teal.value}" },
      "control": {
        "*": { "value": "{color.font.code.primary.aqua.value}" },
        "conditional": {},
        "export": {},
        "import": {
          "value": "{color.font.code.primary.aqua.value}",
          "fontStyle": "italic"
        },
        "from": {
          "value": "{color.font.code.primary.aqua.value}",
          "fontStyle": "italic"
        },
        "flow": {
          "value": "{color.font.code.primary.aqua.value}"
        }
      },
      "operator": {
        "*": { "value": "{color.font.primary.50.value}" },
        "arithmetic": {},
        "assignment": {},
        "bitwise": {},
        "logical": {
          "value": "{color.font.primary.50.value}"
