// Things in markup/markdown languages. Applies to markdown files as well as 
// documentation comments if you include markdown syntax.
{
  "syntax": {
    "markup": {
      "bold": { 
        "value": "{}",
        "fontStyle": "bold"
      },
      "italic": {
        "value": "{}",
        "fontStyle": "italic"
      },
      "fenced_code": {
        "value": "{color.font.primary.50.value}",
      },
      "heading": { 
        "value": "{color.font.primary.50.value}",
        "fontStyle": "bold"
      },
      "quote": {
        "value": "{color.font.primary.60.value}",
        "fontStyle": "italic"
      },
      "underline": {
        "link": { "value": "{color.font.code.primary.blue.value}" }
      }
    },
  }
}